<form action="/transaction" method="post" role="form">
  <div class="form-group">
    <label for="description">Description</label>
    <input type="text" class="form-control" name="transaction[description]" value="<%= @transaction.description %>">
    <%= @transaction.errors.full_messages_for(:description).join(', ') %>
  </div>

  <div class="form-group">
    <label for="amount">Amount (Â£)</label>
    <input type="text" class="form-control" name="transaction[amount]" value="<%= @transaction.amount_as_string %>">
    <%= @transaction.errors.full_messages_for(:amount).join(', ') %>
  </div>

  <div class="form-group">
    <label for="date">Date</label>
    <input type="text" class="form-control" name="transaction[date]" value="<%= @transaction.date %>">
    <%= @transaction.errors.full_messages_for(:date).join(', ') %>
  </div>

  Category:
  <% @categories.each do |category| %>
    <div class="radio">
      <label>
        <input type="radio" name="transaction[category_id]" value=<%= category.id %>>
        <%= category.name %>
      </label>
    </div>
  <% end %>

  <button type="submit" class="btn btn-default">Create Transaction</button>
</form>
