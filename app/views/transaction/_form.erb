<div class="form-group">
  <label for="description">Description</label>
  <input type="text" class="form-control" name="transaction[description]" value="<%= @transaction.description %>">
  <%= @transaction.errors.full_messages_for(:description).join('. ') %>
</div>

<div class="form-group">
  <label for="amount">Amount (Â£)</label>
  <input type="text" class="form-control" name="transaction[amount]" value="<%= @transaction.amount_as_string %>">
  <%= @transaction.errors.full_messages_for(:amount).join('. ') %>
</div>

<div class="form-group">
  <label for="date">Date</label>
  <input type="text" class="form-control" name="transaction[date]" value="<%= @transaction.date.nil? ? "": @transaction.date.strftime("%d/%m/%Y") %>">
  Format: dd/mm/yyyy. <%= @transaction.errors.full_messages_for(:date).join('. ') %>
</div>

Category:
<%= @transaction.errors.full_messages_for(:category).join('. ') %>
<% @categories.each do |category| %>
  <div class="radio">
    <label>
      <input type="radio" name="transaction[category_id]" value=<%= category.id %> <%=!@transaction.category.nil? && category.id == @transaction.category.id ? "checked" : ""%>>
      <%= category.name %>
    </label>
  </div>
<% end %>
