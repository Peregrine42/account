<div class="form-group <%= @transaction.errors[:description].count > 0 ? "has-error" : "" %>">
  <label class="control-label" for="description">Description</label>
  <input type="text" class="form-control" name="transaction[description]" value="<%= @transaction.description %>">
  <span class="text-danger"><%= @transaction.errors.full_messages_for(:description).join('. ') %></span>
</div>

<div class="form-group <%= @transaction.errors[:amount].count > 0 ? "has-error" : "" %>">
  <label class="control-label" for="amount">Amount (Â£)</label>
  <input type="text" class="form-control" name="transaction[amount]" value="<%= @transaction.amount_as_string %>">
  <span class="text-danger"><%= @transaction.errors.full_messages_for(:amount).join('. ') %></span>
</div>

<div class="form-group <%= @transaction.errors[:date].count > 0 ? "has-error" : "" %>">
  <label class="control-label" class="control-label" for="transaction[date]">Date (dd/mm/yyyy)</label>
  <input type="text" class="form-control" name="transaction[date]" value="<%= @transaction.date.nil? ? "": @transaction.date.strftime("%d/%m/%Y") %>" placeholder='dd/mm/yyyy'>
  <span class="text-danger"><%= @transaction.errors.full_messages_for(:date).join('. ') %></span>
</div>

