<a href="/transaction/new">New Transaction</a>
<table border="1">
  <tr>
    <th>Date</th>
    <th>Description</th>
    <th colspan="2">Amount (£)</th>
    <% @categories.each do |category| %>
      <th colspan="2"><%= category.name %> (£)</th>
    <% end %>
  </tr>
  <% @transactions.each do |transaction| %>
    <tr>
      <td><%= transaction.date.strftime('%d/%m/%Y') %></td>
      <td><a href="/transaction/<%= transaction.id %>"><%= transaction.description %></a></td>
      <td><%= transaction.amount < 0 ? '-' : '+'%><%= '%.2f' % transaction.amount %></td>
      <td><%= transaction.running_total < 0 ? '-' : '+'%><%= '%.2f' % transaction.running_total %></td>
      <% (transaction.category.column * 2).times do %>
        <td></td>
      <% end %>
      <td><%= transaction.amount                     < 0 ? '-' : '+'%><%= '%.2f' % transaction.amount                     %></td>
      <td><%= transaction.running_total_for_category < 0 ? '-' : '+'%><%= '%.2f' % transaction.running_total_for_category %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td></td>
    <td>Total (£)</td>
    <td><%= @total < 0 ? '-' : '+'%><%= '%.2f' % @total %></td>
  </tr>
</table>
