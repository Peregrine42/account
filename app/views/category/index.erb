<h1>Categories</h1>
<p><a href=/category/new>New Category</a></p>
<%= @errors %>
<table class='table table-striped'>
  <% @categories.each do |category| %>
    <tr>
      <td>
        <%= category.name %>
      </td>
      <td>
        <a href="/category/<%= category.id %>/edit">Edit</a>
      </td>
      <td>
        <a href="/category/<%= category.id %>/delete" onclick="if (!confirm('Are you sure you would like to delete the <%= category.name %> category?')) return false;">Delete</a>
      </td>
    </tr>
  <% end %>
</table>
<p>Note: categories can only be deleted if there are no transactions in that category.</p>
<p><a href=/>Back</a></p>
