<h1>New Category</h1>
<form action="/category" method="post" role="form">
  <div class="form-group">
    <label for="category[name]">Name</label>
    <input type="text" class="form-control" name="category[name]" value="<%= @category.name %>">
    <%= @category.errors.full_messages_for(:name).join('. ') %>
  <button type="submit" class="btn btn-default">Create Category</button>
  </div>
</form>
